{
  "name": "runback",
  "version": "0.3.0",
  "license": "GPL-3.0",
  "description": "Broadcast graphics for fighting games",
  "author": "Sandro StikiÄ‡ (opeik)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opeik/runback.git"
  },
  "scripts": {
    "dev": "electron-webpack dev",
    "build": "electron-webpack",
    "dist": "yarn build && electron-builder --publish always -c.mac.identity=null",
    "dist:dir": "yarn build && electron-builder --publish never --dir -c.compression=store -c.mac.identity=null"
  },
  "dependencies": {
    "source-map-support": "^0.5.16"
  },
  "devDependencies": {
    "@types/node": "^14.14.0",
    "electron": "10.1.4",
    "electron-builder": "^22.9.1",
    "electron-webpack": "^2.8.2",
    "electron-webpack-ts": "^4.0.1",
    "typescript": "^3.9.4",
    "vue-devtools": "^5.1.4",
    "webpack": "^4.44.2"
  },
  "build": {
    "appId": "me.stikic.runback",
    "productName": "Runback",
    "directories": {
      "buildResources": "static"
    },
    "extraResources": [
      "lib/nodecg",
      "static"
    ],
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
